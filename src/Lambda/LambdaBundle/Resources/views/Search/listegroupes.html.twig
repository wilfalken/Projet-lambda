{% extends 'LambdaBundle:Search:resultats.html.twig' %}
{% block title %}Resultats{% endblock %}
{% block content %}
    <div class="tablecontainer">
        {% if liste_groupes==null %}
            <h1>Votre recherche n'a retourné <span class="red">aucun</span> résultat</h1>
         {% else %}
        <h1>Vos résultats de recherche parmi les groupes :</h1>

        <table class="table table-condensed table-striped table-hover">
            <thead>
                <tr>
                    
                    <th>Nom</th>
                    <th>Officier</th>
                    <th>nombre de membres</td>
                    <th>Action(s)</th>
                   

                </tr>
            </thead>
            
            <tbody>
                {% for unitem in liste_groupes %}
                    
                    <tr>
                       
                        <td>{{ unitem.nomgroupe }}</td>
                        <td>{{ unitem.officier.username }}</td>
                        <td>{{ unitem.idcategorie['0'].nomcategorie }}</td>
                        <td>{% if unitem.photoitem==null %}Aucune photo...{% else %}{{ unitem.photoitem }}{% endif %}</td>
                        
                        
                        <td>
                            <ul>

                                

                                {% if app.user.id == null %}Connectez-vous !{% else %}
                                    <a class="btn btn-primary btn-xs" href="{{ path('search', { 'id': unitem.iditem }, {'iduser': app.user.id}) }}">Je l'ai !!!</a>
                                {% endif %}
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
    
    
{% endblock %}