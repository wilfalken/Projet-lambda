{% extends '::base.html.twig' %}

{% block body %}
    <h1>Evenement : {{ evenement.titreevenement }}</h1>

    <table>
        <tbody>
           
            <tr>
                <th>Texteevenement</th>
                <td>{{ evenement.texteevenement|raw }}</td>
            </tr>
            <tr>
                <th>Lienimage</th>
                <td><img src="{{ asset('uploads/evenement/' ~ evenement.lienimage) }}"</td>
            </tr>
            <tr>
                <th>Dateajout</th>
                <td>{% if evenement.dateajout %}{{ evenement.dateajout|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_evenement_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_evenement_edit', { 'id': evenement.idevenement }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
